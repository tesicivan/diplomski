{% extends 'base.html.twig' %}

{% trans_default_domain 'app' %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-5">
        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fa-solid fa-user me-2"></i>{{ user.username }}
                </a>
                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <li><a href="{{ path('change_password') }}" class="dropdown-item" href="#"><i class="fa-solid fa-lock me-2"></i> {{ 'general.change-password'|trans|lower }}</a></li>
                    <li><a href="{{ path('app_logout') }}" class="dropdown-item" href="#"><i class="fa-solid fa-right-from-bracket me-2"></i>{{ 'general.logout'|trans }}</a></li>
                </ul>
            </li>
        </ul>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            {% if company.isConfigured and company.isActive %}
            <ul class="navbar-nav">
                <li class="nav-item ms-4">
                    <a class="nav-link" href="{{ path('company_info') }}"><i class="fa-solid fa-file-invoice me-2"></i>{{ 'company.nav.company'|trans }}</a>
                </li>
                <li class="nav-item ms-4">
                    <a class="nav-link" href="{{ path('company_partners') }}"><i class="fa-solid fa-warehouse me-2"></i>{{ 'company.nav.partners'|trans }}</a>
                </li>
                <li class="nav-item ms-4">
                    <a class="nav-link" href="{{ path('company_articles') }}"><i class="fa-solid fa-cart-shopping me-2"></i>{{ 'company.nav.articles'|trans }}</a>
                </li>
                <li class="nav-item ms-4">
                    <a class="nav-link" href="{{ path('company_categories') }}"><i class="fa-solid fa-list me-2"></i>{{ 'company.nav.categories'|trans }}</a>
                </li>
                {% if company.category.title == 'restaurant' %}
                <li class="nav-item ms-4">
                    <a class="nav-link" href="{{ path('company_tables') }}"><i class="fa-solid fa-chair me-2"></i>{{ 'company.nav.tables-layout'|trans }}</a>
                </li>
                {% endif %}
                <li class="nav-item ms-4">
                    <a class="nav-link" href="{{ path('company_bill') }}"><i class="fa-solid fa-receipt me-2"></i>{{ 'company.nav.bills'|trans }}</a>
                </li>
                <li class="nav-item ms-4">
                    <a class="nav-link" href="{{ path('company_analytics_review') }}"><i class="fa-solid fa-chart-pie me-2"></i>{{ 'company.nav.analytics'|trans }}</a>
                </li>
            </ul>
            {% endif %}
        </div>
    </nav>
    {% block content %}
    {% endblock %}
    {% include 'footer.html.twig' %}
{% endblock %}